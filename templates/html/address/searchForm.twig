{% extends "html/layouts/default.twig" %}

{% block content %}
<h1>Welcome,</h1>
<p>myBloomington provides information related to a given street address.</p>
<p>Enter an address to learn more:</p>
{{ include('html/address/partials/searchForm.twig') }}

{% if query and not results %}
<p>No resuts found</p>
{% endif %}

{% if results %}
<h2>Addresses</h2>
    {% for a in results %}
    <div class="{{ a.jurisdiction_name=='Bloomington' ? 'city' : 'county' }}">
        <a href="{{ uri('address.info', {'id': a.id}) }}">
        {{ a.streetAddress }}
        </a>
    </div>
    {% endfor %}
{% endif %}

{% endblock %}
